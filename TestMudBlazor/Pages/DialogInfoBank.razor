@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" GutterBottom="true" Style="margin-top: 10px">Thêm tài khoản ngân hàng</MudText>
        <MudGrid Style="margin-top: 10px">
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="SoTaiKhoan" Label="Số tài khoản" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="ChuTaiKhoan" Label="Chủ tài khoản" Variant="Variant.Outlined"></MudTextField>
            </MudItem>

        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudSelect Label="Ngân hàng" Strict="true" @bind-Value="NganHang" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem T="bool" Value="false">A</MudSelectItem>
                    <MudSelectItem T="bool" Value="true">B</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6" md="6">
                <MudSelect Label="Loại tiền tệ" Strict="true" @bind-Value="LoaiTienTe" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem Value="'a'">A</MudSelectItem>
                    <MudSelectItem  Value="'a'">B</MudSelectItem>
                </MudSelect>
            </MudItem>
        </MudGrid>
        
        
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    public string ChuTaiKhoan { get; set; }
    public string SoTaiKhoan { get; set; }
    public string NganHang { get; set; }
    public string LoaiTienTe { get; set; }
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}