@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" GutterBottom="true">Danh sách tài khoản ngân hàng</MudText>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="stk" Label="Số tài khoản" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="ctk" Label="Chủ tài khoản" Variant="Variant.Outlined"></MudTextField>
            </MudItem>

        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudSelect T="bool" Label="Ngân hàng" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem T="bool" Value="false">A</MudSelectItem>
                    <MudSelectItem T="bool" Value="true">B</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="chinhanh" Label="Chi nhánh" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="dcchinhanh" Label="Địa chỉ chi nhánh" Variant="Variant.Outlined"></MudTextField>
            </MudItem>

            <MudItem xs="12" sm="6" md="6">
                <MudSelect T="bool" Label="Tỉnh thành phố" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem T="bool" Value="true">Bắc Ninh</MudSelectItem>
                    <MudSelectItem T="bool" Value="false">Bắc Giang</MudSelectItem>
                </MudSelect>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="ghichu" Label="Ghi chú" Variant="Variant.Outlined"></MudTextField>
            </MudItem>

            <MudItem xs="12" sm="6" md="6">
                <MudSelect T="bool" Label="Hoạt động" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem T="bool" Value="true">Dừng</MudSelectItem>
                    <MudSelectItem T="bool" Value="false">Đang hoạt động</MudSelectItem>
                </MudSelect>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    public string chinhanh { get; set; }
    public string hoten { get; set; }
    public string sdt { get; set; }
    public string ghichu { get; set; }
    public string ctk { get; set; }
    public string stk { get; set; }
    public string dcchinhanh { get; set; }
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}