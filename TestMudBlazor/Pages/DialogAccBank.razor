@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" GutterBottom="true" Style="margin-top: 10px">Thêm tài khoản ngân hàng</MudText>
        <MudGrid Style="margin-top: 10px">
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="SoTaiKhoan" Label="Số tài khoản" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="ChuTaiKhoan" Label="Chủ tài khoản" Variant="Variant.Outlined"></MudTextField>
            </MudItem>

        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudSelect  Label="Ngân hàng" @bind-Value="NganHang" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem  Value="'a'">A</MudSelectItem>
                    <MudSelectItem  Value="'b'">B</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="ChiNhanh" Label="Chi nhánh" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="DiaChiChiNhanh" Label="Địa chỉ chi nhánh" Variant="Variant.Outlined"></MudTextField>
            </MudItem>

            <MudItem xs="12" sm="6" md="6">
                <MudSelect  Label="Tỉnh thành phố" @bind-Value="TinhThanhPho" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem  Value="'a'">Bắc Ninh</MudSelectItem>
                    <MudSelectItem  Value="'b'">Bắc Giang</MudSelectItem>
                </MudSelect>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="GhiChu" Label="Ghi chú" Variant="Variant.Outlined"></MudTextField>
            </MudItem>

            <MudItem xs="12" sm="6" md="6">
                <MudSelect T="bool" Label="Hoạt động" @bind-Value="HanhDong" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem T="bool" Value="true">Dừng</MudSelectItem>
                    <MudSelectItem T="bool" Value="false">Đang hoạt động</MudSelectItem>
                </MudSelect>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    public string ChiNhanh { get; set; }
    public string NganHang { get; set; }
    public string SoTaiKhoan { get; set; }
    public string GhiChu { get; set; }
    public string ChuTaiKhoan { get; set; }
    public string TinhThanhPho { get; set; }
    public string DiaChiChiNhanh { get; set; }
    public bool HanhDong { get; set; }
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}