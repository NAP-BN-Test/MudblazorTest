@page "/addcustomertype"
@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations 
<MudGrid Style="margin-top: 10px">
    
    <MudGrid>
        <MudItem xs="12">
            <EditForm Model="@model" OnValidSubmit="OnValidSubmit">
                <DataAnnotationsValidator />
                <MudGrid>
                    <MudItem xs="6">
                        <MudText Style="line-height: 60px" Typo="Typo.h5" GutterBottom="true">Thêm mới loại khách hàng</MudText>
                    </MudItem>
                    <MudItem xs="6">
                        <MudToolBar>
                            <MudSpacer />
                            <MudIconButton Icon="@Icons.Material.Outlined.Add" ButtonType="ButtonType.Submit"/>
                            <MudIconButton Icon="@Icons.Material.Outlined.Edit" />
                            <MudIconButton Icon="@Icons.Material.Outlined.Notifications" />
                        </MudToolBar>
                    </MudItem>
                </MudGrid>
                <MudGrid>
                    <MudItem xs="12" sm="6" md="6">
                        <MudTextField @bind-Value="model.Ma" Label="Mã (*)" Variant="Variant.Outlined" For="@(() => model.Ma)"></MudTextField>
                    </MudItem>

                    <MudItem xs="12" sm="6" md="6">
                        <MudTextField @bind-Value="model.Ten" Label="Tên" Variant="Variant.Outlined" For="@(() => model.Ten)"></MudTextField>
                    </MudItem>
                </MudGrid>
                <MudGrid>
                    <MudItem xs="12" sm="12" md="6">
                        <MudCheckBox T="bool" Required="true" @bind-Value="model.YeuThich" RequiredError="You must agree" Class="ml-n2"
                                     Label="Yêu thích" />
                    </MudItem>
                    <MudItem xs="12" sm="12" md="6">
                        <MudCheckBox T="bool" Required="true" @bind-Value="model.HoatDong" RequiredError="You must agree" Class="ml-n2"
                                     Label="Hoạt động" />
                    </MudItem>
                </MudGrid>
                <MudGrid>
                    <MudItem xs="12">
                        <MudText Align="Align.Center" Style="color: red" GutterBottom="true">"Vui lòng nhập thông tin, các ô có dấu (*) là bắt buộc"</MudText>
                    </MudItem>
                </MudGrid>
            </EditForm>
        </MudItem>


    </MudGrid>
</MudGrid>

@code {

    CustomerType model = new CustomerType();
    public class CustomerType
    {
        [Required(ErrorMessage = "Nhập mã!")]
        public string Ma { get; set; }
        public string Ten { get; set; }
        public bool HoatDong { get; set; }
        public bool YeuThich { get; set; }



    }

    bool success;
    string[] errors = { };
    private void OnValidSubmit(EditContext context)
    {
    }


}
