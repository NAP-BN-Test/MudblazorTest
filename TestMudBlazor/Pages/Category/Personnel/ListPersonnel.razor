                    <MudTh>Địa chỉ thường trú</MudTh>
                    <MudTh>Địa chỉ tạm trú</MudTh>
                    <MudTh>Điện thoại</MudTh>
                    <MudTh>Email</MudTh>
                    <MudTh>Chức vụ</MudTh>
                    <MudTh>Phòng ban</MudTh>
                    <MudTh>Ghi chú</MudTh>
                </HeaderContent>
                <RowTemplate>
                    <MudTd DataLabel="ma">@context.ma</MudTd>
                    <MudTd DataLabel="ho">@context.ho</MudTd>
                    <MudTd DataLabel="tendem">@context.tendem</MudTd>
                    <MudTd DataLabel="ten">@context.ten</MudTd>
                    <MudTd DataLabel="ngaysinh">@context.ngaysinh</MudTd>
                    <MudTd DataLabel="gioitinh">@context.gioitinh</MudTd>
                    <MudTd DataLabel="cmnd">@context.cmnd</MudTd>
                    <MudTd DataLabel="dcthuongtru">@context.dcthuongtru</MudTd>
                    <MudTd DataLabel="dctamtru">@context.dctamtru</MudTd>
                    <MudTd DataLabel="dienthoai">@context.dienthoai</MudTd>
                    <MudTd DataLabel="email">@context.email</MudTd>
                    <MudTd DataLabel="chucvu">@context.chucvu</MudTd>
                    <MudTd DataLabel="phongban">@context.phongban</MudTd>
                    <MudTd DataLabel="ghichu">@context.ghichu</MudTd>
                </RowTemplate>
                <PagerContent>
                    <MudTablePager PageSizeOptions="new int[]{50, 100}" />
                </PagerContent>

            </MudTable>
        </MudItem>
    </MudGrid>
</MudGrid>


