<MudDialog>
    <DialogContent>
        <MudGrid>
            <MudItem xs="12" sm="6" md="4">
                <MudSelect T="bool" Label="Loại" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem T="bool" Value="false">Cá nhân</MudSelectItem>
                    <MudSelectItem T="bool" Value="true">Tổ chức</MudSelectItem>
                </MudSelect>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudTextField @bind-Value="diachi" Label="Địa chỉ" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="12" sm="6" md="4">
                <MudTextField @bind-Value="diachidk" Label="Địa chỉ đăng ký kinh doanh" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    public string diachidk { get; set; }
    public string diachi { get; set; }
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}