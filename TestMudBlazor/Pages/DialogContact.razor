@using System.Text.RegularExpressions
@using System.ComponentModel.DataAnnotations
<MudDialog>
    <DialogContent>
        <MudText Typo="Typo.h6" GutterBottom="true" Style="margin-top: 10px">Thêm liên hệ</MudText>
        <MudGrid Style="margin-top: 10px">
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="HoTen" Label="Họ tệ" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="SoDienThoai" Label="Số điện thoại" Variant="Variant.Outlined"></MudTextField>
            </MudItem>

        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="Email" Label="Email" Validation="@(new EmailAddressAttribute() {ErrorMessage = "The email address is invalid"})" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
            <MudItem xs="12" sm="6" md="6">
                <MudTextField @bind-Value="Fax" Label="Fax" Variant="Variant.Outlined"></MudTextField>
            </MudItem>
        </MudGrid>
        <MudGrid>
            <MudItem xs="12" sm="6" md="6">
                <MudSelect  Label="Chức vụ"  @bind-Value="ChucVu" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem Value="'a'">A</MudSelectItem>
                    <MudSelectItem Value="'b'">B</MudSelectItem>
                </MudSelect>
            </MudItem>

            <MudItem xs="12" sm="6" md="6">
                <MudSelect T="bool" Label="Hoạt động" @bind-Value="HoatDong" Strict="true" Variant="Variant.Outlined" Format="F2">
                    <MudSelectItem T="bool" Value="true">Dừng</MudSelectItem>
                    <MudSelectItem T="bool" Value="false">Đang hoạt động</MudSelectItem>
                </MudSelect>
            </MudItem>
        </MudGrid>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    public string Fax { get; set; }
    public string HoTen { get; set; }
    public string SoDienThoai { get; set; }
    public string Email { get; set; }
    public string ChucVu { get; set; }
    public bool HoatDong { get; set; }
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}